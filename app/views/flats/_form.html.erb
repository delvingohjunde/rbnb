
<%= simple_form_for(@flat) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :price_per_night %>
    <%= f.input :check_in %>
    <%= f.input :check_out %>
    <%= f.input :guests %>
    <%= f.input :bedrooms %>
    <%= f.input :bathrooms %>
    <%= f.input :wifi %>
    <%= f.input :aircon %>
    <%= f.input :rating %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
