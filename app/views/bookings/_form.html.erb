
<%= simple_form_for(@booking) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :location %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :check_in %>
    <%= f.input :check_out %>
    <%= f.input :adults %>
    <%= f.input :children %>
    <%= f.association :user %>
    <%= f.association :flat %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
